# Example environment variables for Falabella Testing Framework
# Copy this file to .env and update with your values

# Base URL for tests (default: https://www.falabella.com)
BASE_URL=https://www.falabella.com

# Test timeouts (in milliseconds)
TEST_TIMEOUT=30000
NAVIGATION_TIMEOUT=30000

# Browser settings
HEADLESS=true
SLOW_MO=0

# Screenshot settings
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true

# Test user credentials (if needed for authenticated tests)
# TEST_USER_EMAIL=
# TEST_USER_PASSWORD=

# Reporting
REPORT_OPEN=false
